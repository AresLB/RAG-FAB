# Datenbank
DATABASE_URL=mongodb://localhost:27017/rag-fab
# oder für PostgreSQL: postgresql://user:password@localhost:5432/rag-fab

# OpenAI API
OPENAI_API_KEY=sk-...

# Vektor-Datenbank (Pinecone)
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=...
PINECONE_INDEX_NAME=rag-fab-documents

# AWS (S3 für Dokument-Speicherung)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=eu-central-1
AWS_S3_BUCKET=rag-fab-documents

# AWS Textract (OCR)
AWS_TEXTRACT_REGION=eu-central-1

# Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=7d

# Stripe (Payment)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# App Config
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Subscription Limits
FREE_PLAN_QUESTIONS=3
BASIC_PLAN_QUESTIONS=50
